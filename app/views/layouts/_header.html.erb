<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  	<div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">Car<span>Share</span></a>
    </div>
    <div class="collapse navbar-collapse" id="navbar1">
      
    <% if logged_in? %>
      <ul class="nav navbar-nav navbar-right" >
        <li>
            <div class = "user-name">
                <%= link_to "#{current_user.name}", current_user %>    
            </div>
            </li>
          <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Notification
                <% if current_user.notifications %>
                <%= current_user.notifications.count %>
                <% end %><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                  <% current_user.notifications.each do |notification| %>
                      <li>
                        <a>
                            <p><%= notification.request %></p>
                              <%= notification.user.name %>
                        </a>
                      </li>
                      <li> 
                      <%= link_to("accept",acceptRequest_path(respond: notification)  , method: :post) %>
                      <%= link_to("refuse",refuseRequest_path(respond: notification)  , method: :post) %> 
                      </li>
                      <li class="divider"></li>
                  <% end %>
              </ul>
          </li>
          <li><%= link_to "Users", users_path %></li>
          <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li>
                  <%= link_to "Log out", logout_path, method: :delete %>
                </li>
              </ul>
            </li>
        </ul>
    <% else %>
      <ul class="form-inline navbar-right" >
      <div class="form-group">
            <%= form_for(:session, url: login_path) do |f| %>
              <br>
                    <% if $flagLoginError == 1 %>
                      <div class="alert-danger">Invalid Email or Password</div>
                      <% $flagLoginError = 0 %>
                    <% end %>
                        <%= f.email_field :email ,class:"form-control" %>
                        <%= f.password_field :password ,class:"form-control"%>
                        <%= f.label :remember_me, class: "checkbox inline" do %>
                        <%= f.check_box :remember_me %>
                        <span>Remember</span>
                        <% end %>
                    <%= f.submit "Login", class: "btn btn-primary" %>
            <% end %>
      </div>
    	</ul>
   <% end %>
    	</div>
    </div>
</nav>