<p id="notice"><%= notice %></p>

<h1>Locations</h1>

<%= form_tag search_path, :method => :post do %>
  <p>
    <label>Start&emsp;&emsp;&emsp;</label>
    <%= text_field_tag :starting, params[:starting], placeholder: "StartingPoint" %>
    <br>
    <label>Distnation</label>
    <%= text_field_tag :heading, params[:heading], placeholder: "EndingPoint" %>
    <br>
    <%= submit_tag "Search Near", :name => nil, class: "btn btn-success btn-xs" %>
  </p>
<% end %>
<% if @nearlocation %>
  <p>
  yes
  </p>
  <% for loc in @nearlocation %>
    <%= link_to loc.fromAddress, loc%> to <%= loc.toAddress %>
    <br>
  <% end %>
<% else %>
<table>
  <thead>
    <tr>
      <th>Day</th>
      <th>Fromaddress</th>
      <th>From lat</th>
      <th>From long</th>
      <th>Toaddress</th>
      <th>To lat</th>
      <th>To long</th>
      <th>Time</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.day %></td>
        <td><%= location.fromAddress %></td>
        <td><%= location.from_lat %></td>
        <td><%= location.from_long %></td>
        <td><%= location.toAddress %></td>
        <td><%= location.to_lat %></td>
        <td><%= location.to_long %></td>
        <td><%= location.time %></td>
        <td><%= location.user %></td>
        <td><%= link_to 'Show', location %></td>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
        <td><%= link_to 'pickup', pickup_path(loc: location) %></td>
        <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% end %>

<%= link_to 'New Location', new_location_path %>
